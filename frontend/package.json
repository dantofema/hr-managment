    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "cypress": "^13.17.0",
    "jsdom": "^26.1.0",
    "msw": "^2.10.4",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "vue": "^3.5.18"
